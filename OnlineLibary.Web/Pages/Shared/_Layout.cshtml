@using OnlineLibary.Domain.Enums
@{
    var isUserLogin = User.Identity.IsAuthenticated;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineLibary.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineLibary.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="@SitePages.Index">OnlineLibary</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div class="d-flex d-sm-inline-flex">
                        <a class="text-dark nav-link" asp-area="" asp-page="@SitePages.Index">Home</a>
                        <a class="text-dark nav-link" asp-area="" asp-page="@SitePages.Privacy">Privacy</a>
                    </div>
                    <div class="d-flex ms-auto d-sm-inline-flex">
                        @{
                            if (!isUserLogin)
                            {
                                <a class="btn btn-primary" asp-area="" asp-page="@SitePages.AccountLogin">Login</a>
                                <a class="btn btn-dark ms-2" asp-area="" asp-page="@SitePages.AccountRegister">Register</a>
                            }
                            else
                            {
                                <a class="text-dark nav-link" asp-area="" asp-page="@SitePages.Privacy">@User.Identity.Name</a>
                                <a class="btn btn-dark" asp-area="" asp-page="@SitePages.AccountLogout">Logout</a>
                            }
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - OnlineLibary.Web - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>